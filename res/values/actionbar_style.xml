<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppBaseTheme.ActionBar.Background" parent="android:Widget.ActionBar">
        <item name="android:background">@color/xo_app_main_color</item>
    </style>

    <style name="AppBaseTheme.ActionBar.OverflowButton"
           parent="android:Widget.ActionButton.Overflow">
        <item name="android:src">@android:drawable/ic_menu_more</item>
    </style>

    <style name="AppBaseTheme.PopupMenu" parent="android:style/Widget.Holo.Light.ListPopupWindow">
        <item name="android:background">@color/xo_app_main_color</item>
    </style>
    <style name="AppBaseTheme.SpinnerDropDown" parent="android:Widget.TextView.SpinnerItem">
        <item name="android:background">@color/xo_app_main_color</item>
    </style>
    <style name="AppBaseTheme.ActionBar.TitleText"
           parent="android:TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/white</item>
    </style>

</resources>