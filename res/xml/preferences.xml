<?xml version="1.0" encoding="utf-8"?>

<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
            android:title="Automatic downloads">

        <CheckBoxPreference
                android:key="preference_download_auto_mobile"
                android:title="On mobile networks"
                android:defaultValue="false"/>

        <CheckBoxPreference
                android:key="preference_download_auto_wifi"
                android:title="On wireless networks"
                android:defaultValue="true"/>

    </PreferenceCategory>

    <PreferenceCategory
            android:title="Legal Information">
        <Preference
                android:title="@string/menu_about">
            <intent android:action="com.hoccer.xo.ABOUT"/>
        </Preference>
        <Preference
                android:title="@string/menu_licenses">
            <intent android:action="com.hoccer.xo.LICENSES"/>
        </Preference>
    </PreferenceCategory>

</PreferenceScreen>
