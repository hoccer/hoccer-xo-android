<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <com.hoccer.talk.android.views.AspectImageView
        android:id="@+id/contact_icon"
        android:src="@drawable/ic_launcher"
        android:scaleType="centerCrop"
        custom:aspectRatio="1.0"
        android:layout_width="50dp"
        android:layout_height="wrap_content"/>
    
    <TextView
        android:id="@+id/contact_name"
        android:text="@string/contact_name_new_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/contact_icon"/>

    <TextView
        android:id="@+id/contact_unseen_messages"
        android:text=" (1)"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/contact_name"/>

    <TextView
        android:id="@+id/contact_latest_message"
        android:text="Lorem ipsum dolor..."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/contact_icon"
        android:layout_below="@id/contact_name"/>

    <Button
        android:id="@+id/contact_profile_button"
        android:text="@string/contact_profile_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"/>

</RelativeLayout>
