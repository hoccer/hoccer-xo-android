<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >
    
    <com.hoccer.talk.android.views.AspectImageView
        android:id="@+id/contact_icon"
        android:src="@drawable/avatar_default_group"
        android:clickable="true"
        android:scaleType="centerCrop"
        custom:aspectRatio="1.0"
        android:layout_margin="2dp"
        android:layout_width="50dp"
        android:layout_height="wrap_content"/>
    
    <TextView
        android:id="@+id/contact_name"
        android:text="@string/contact_name_new_group"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
        android:layout_margin="2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/contact_icon"/>

    <TextView
        android:id="@+id/contact_unseen_messages"
        android:text="1"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
        android:textColor="@android:color/secondary_text_dark"
        android:layout_margin="2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/contact_name"/>

    <TextView
        android:id="@+id/contact_last_message"
        android:text="Lorem ipsum dolor..."
        android:textColor="@android:color/secondary_text_dark"
        android:lines="1"
        android:layout_margin="2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/contact_icon"
        android:layout_toLeftOf="@id/contact_type"
        android:layout_below="@id/contact_name"/>

    <TextView
        android:id="@+id/contact_type"
        android:text="@string/common_group"
        android:textColor="@android:color/secondary_text_dark"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>
