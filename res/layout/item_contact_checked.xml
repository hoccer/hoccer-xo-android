<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:custom="http://schemas.android.com/apk/res-auto"
        android:gravity="center|left"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

    <com.hoccer.xo.android.view.AvatarView
            android:id="@+id/contact_icon"
            android:clickable="true"
            android:layout_width="45dp"
            android:layout_height="45dp"
            custom:cornerRadius="45"
            custom:defaultAvatarImageUrl="@drawable/avatar_default_contact"
            style="@style/AppBaseTheme.Group.Members.MemberAvatar"/>

    <CheckedTextView
            android:id="@+id/contact_name_checked"
            android:text="@string/contact_name_new_client"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checkMark="@drawable/appbasetheme_btn_check_holo_light"
            android:checked="false"
            android:ellipsize="end"
            android:maxLines="1"
            android:singleLine="true"
            style="@style/AppBaseTheme.Group.Members.MemberName"/>

</LinearLayout>
