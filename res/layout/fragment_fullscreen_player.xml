<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/music_fullscreen_gradient_bg">

    <LinearLayout
            android:id="@+id/ll_player_playlist_track_container"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:paddingLeft="5dp"
            android:paddingRight="5dp">

        <TextView
                android:id="@+id/tv_player_playlist_track"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#ffffffff"
                android:textSize="16dp"
                android:paddingLeft="10dp"
                android:textStyle="bold"
                android:text="28/46"
                android:layout_marginTop="10dp"/>"

    </LinearLayout>

    <LinearLayout
            android:id="@+id/ll_player_artwork_container"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_player_playlist_track_container"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:gravity="center">
        <ImageView android:id="@+id/iv_player_artwork"
                   android:layout_width="fill_parent"
                   android:layout_height="300dp"
                   android:alpha="0.4"
                   android:src="@drawable/media_cover_art_default"/>
    </LinearLayout>

    <LinearLayout
            android:id="@+id/ll_player_track_description"
            android:layout_width="fill_parent"
            android:layout_height="65dip"
            android:layout_below="@id/ll_player_artwork_container"
            android:orientation="vertical"
            android:paddingLeft="5dp"
            android:paddingRight="5dp">

        <TextView
                android:id="@+id/tv_player_track_title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="#ffffffff"
                android:textSize="20dp"
                android:text="Unknown Title"
                android:singleLine="true"
                android:ellipsize="marquee"
                android:fadingEdge="horizontal"
                android:marqueeRepeatLimit="marquee_forever"
                android:scrollHorizontally="true"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:duplicateParentState="true"
                android:gravity="center_horizontal">
            <requestFocus
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:duplicateParentState="true" />
                </TextView>
        <TextView
                android:id="@+id/tv_player_track_artist"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#aaaaaaaa"
                android:textSize="16dp"
                android:text="Uknown Artist"
                android:lines="1"
                android:singleLine="true"
                android:ellipsize="marquee"
                android:fadingEdge="horizontal"
                android:marqueeRepeatLimit="marquee_forever"
                android:scrollHorizontally="true"
                android:gravity="center_horizontal"/>"

    </LinearLayout>

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:orientation="vertical"
            android:layout_alignParentBottom="true"
            android:gravity="center">

        <ImageButton
                android:id="@+id/bt_player_repeat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_player_repeat"
                android:layout_marginLeft="5dp"
                android:background="@null"/>

        <ImageButton
                android:id="@+id/bt_player_shuffle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_player_shuffle"
                android:layout_marginLeft="5dp"
                android:background="@null"/>
    </LinearLayout>

    <!-- Player Footer -->
    <LinearLayout
            android:id="@+id/ll_player_controls"
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:layout_alignParentBottom="true"
            android:gravity="center">

        <!-- Player Buttons -->
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">


            <!-- Previous Button -->
            <ImageButton
                    android:id="@+id/bt_player_skip_back"
                    android:src="@drawable/ic_player_prev"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="30dp"
                    android:background="@null"/>

            <!-- Play Button -->
            <ImageButton
                    android:id="@+id/bt_player_play"
                    android:src="@drawable/ic_player_pause"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"/>
            <!-- Next Button -->
            <ImageButton
                    android:id="@+id/bt_player_skip_forward"
                    android:src="@drawable/ic_player_next"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:background="@null"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
            android:id="@+id/ll_player_seekbar_container"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_player_track_description"
            android:gravity="center">

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

            <TextView
                    android:id="@+id/tv_player_current_time"
                    android:src="@drawable/ic_player_prev"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#aaaaaaaa"
                    android:background="@null"/>

            <SeekBar
                    android:id="@+id/pb_player_seek_bar"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:thumb="@drawable/seekbar_player_control"
                    android:progressDrawable="@drawable/progress_horizontal_appbasetheme"/>

            <TextView
                    android:id="@+id/tv_player_total_duration"
                    android:src="@drawable/ic_player_next"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#aaaaaaaa"
                    android:background="@null"/>
        </LinearLayout>


    </LinearLayout>

</RelativeLayout>