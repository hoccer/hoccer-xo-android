<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:custom="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <com.hoccer.xo.android.view.AvatarView
        android:id="@+id/message_avatar"
        android:padding="2dp"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:scaleType="centerCrop"
        custom:defaultAvatarImageUrl="@drawable/avatar_default_contact"/>

    <TextView
        android:id="@+id/message_text"
        android:text="@string/message_text"
        android:layout_width="match_parent"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="50dp"
        android:minHeight="50dp"
        android:gravity="center_vertical"
        android:layout_toRightOf="@id/message_avatar"
        android:layout_height="wrap_content"
        style="@style/AppBaseTheme.Message.Incoming"
        />

    <com.hoccer.xo.android.content.ContentView
        android:id="@+id/message_content"
        android:gravity="center"
        custom:maxHeight="500dp"
        android:paddingBottom="2dp"
        android:paddingTop="2dp"
        android:paddingRight="2dp"
        android:paddingLeft="0dp"
        android:layout_width="match_parent"
        android:layout_toRightOf="@id/message_avatar"
        android:layout_below="@id/message_text"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/message_time"
        android:text="13:23"
        android:textColor="@android:color/secondary_text_dark"
        android:layout_below="@id/message_content"
        android:layout_toRightOf="@id/message_avatar"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:gravity="right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>
