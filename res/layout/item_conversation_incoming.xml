<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:custom="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="10dp">

    <RelativeLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
                    android:layout_height="match_parent">

        <TextView
                android:id="@+id/tv_message_time"
                android:text="13:23"
                android:textColor="@android:color/secondary_text_dark"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" tools:ignore="HardcodedText"/>

        <com.hoccer.xo.android.view.AvatarView
                android:id="@+id/av_message_avatar"
                android:padding="2dp"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_below="@+id/tv_message_time"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:scaleType="centerCrop"
                custom:cornerRadius="60"
                custom:defaultAvatarImageUrl="@drawable/avatar_default_contact"/>

        <TextView
                android:id="@+id/tv_message_text"
                android:layout_below="@+id/tv_message_time"
                android:layout_alignWithParentIfMissing="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="30dp"
                android:minHeight="50dp"
                android:gravity="center_vertical"
                android:paddingLeft="25dp"
                style="@style/AppBaseTheme.Message.Incoming"
                android:textIsSelectable="true"
                android:autoLink="all"
                android:layout_toRightOf="@id/av_message_avatar"
                android:layout_alignParentRight="true"
                android:text="@string/message_text"
                />

        <!--<com.hoccer.xo.android.content.old.OldContentView-->
