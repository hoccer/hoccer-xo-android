<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"

        android:id="@+id/messaging_composer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/xo_main_background">

    <GridView
            android:id="@+id/gv_emojis"
            android:layout_width="match_parent"
            android:layout_height="155dp"
            android:layout_below="@+id/et_emoji_input"
            android:paddingLeft="15dp"
            android:paddingTop="10dp"
            android:background="@android:color/black"
            android:numColumns="auto_fit"
            android:stretchMode="columnWidth"
            android:columnWidth="50dp"
            android:gravity="center"
            android:visibility="gone"/>

    <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/xo_compose_message_divider"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:orientation="horizontal">


        <ImageButton
                android:id="@+id/btn_messaging_composer_add_attachment"
                android:src="@drawable/ic_light_content_attachment"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxHeight="50dp"
                android:maxWidth="50dp"
                android:scaleType="centerInside"
                android:adjustViewBounds="true"
                android:padding="5dp"/>

        <ImageButton
                android:id="@+id/btn_messaging_composer_emoji"
                android:src="@drawable/ic_emoji"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerInside"
                android:adjustViewBounds="true"
                android:padding="5dp"/>

        <EditText
                android:id="@+id/messaging_composer_text"
                android:inputType="textShortMessage|textMultiLine"
                android:hint="@string/composition_text_hint"
                android:singleLine="false"
                android:maxLines="10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                />

        <ImageButton
                android:id="@+id/btn_messaging_composer_send"
                android:src="@drawable/ic_light_social_send_now"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:layout_gravity="center_vertical"/>

    </LinearLayout>

</LinearLayout>
