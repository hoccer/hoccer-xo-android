<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/AppBaseTheme.Group.Layout">

        <TextView
                android:id="@+id/profile_group_members_title"
                android:text="@string/profile_name_title"
                android:gravity="left"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/AppBaseTheme.Group.GroupText"/>

        <TextView
                android:id="@+id/profile_name_text"
                android:text="@string/profile_name_title"
                android:gravity="left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/AppBaseTheme.Group.GroupName"/>

        <TextView
                android:id="@+id/profile_group_members_title"
                android:text="@string/profile_group_members_title"
                android:gravity="left"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/AppBaseTheme.Group.GroupText"/>

        <ListView
                android:id="@+id/profile_group_members_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/AppBaseTheme.Group.Member.List"/>

    </LinearLayout>
