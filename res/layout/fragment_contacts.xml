<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    
    <ListView
        android:id="@+id/contacts_contact_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    
    <Button
        android:id="@+id/contacts_find_contacts_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/contacts_find_contacts_button" />

    <Button
        android:id="@+id/contacts_scan_barcode_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/contacts_scan_barcode_button" />

    <Button
        android:id="@+id/contacts_create_group_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/contacts_create_group_button" />
    
</LinearLayout>
