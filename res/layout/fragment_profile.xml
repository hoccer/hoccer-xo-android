<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

  <ImageView
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:id="@+id/profile_avatar_image"/>

  <TextView
    android:id="@+id/profile_name_text"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:text="Hans Hoccermann"/>

  <TextView
    android:id="@+id/profile_status_text"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:text="Still hoccing"/>

  <Button
    android:id="@+id/profile_self_set_avatar"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:text="Change my avatar image"/>

  <TextView
    android:id="@+id/profile_user_block_status"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:text="This user is blocked"/>

  <Button
    android:id="@+id/profile_user_block_button"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:text="Block this user"/>

</LinearLayout>