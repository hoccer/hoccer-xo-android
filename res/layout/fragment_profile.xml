<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:custom="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.hoccer.talk.android.views.AspectImageView
            android:id="@+id/profile_avatar_image"
            android:src="@drawable/avatar_default_contact_large"
            android:scaleType="centerCrop"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            custom:aspectRatio="1.0"/>

        <TextView
            android:id="@+id/profile_name_text"
            android:text="@string/profile_name_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/profile_name_edit"
            android:hint="@string/profile_name_edit"
            android:inputType="text"
            android:imeOptions="actionDone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/profile_name_set_button"
            android:text="@string/profile_name_set_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/profile_user_block_status"
            android:text="@string/profile_user_block_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/profile_user_block_button"
            android:text="@string/profile_user_block_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/profile_user_depair_button"
            android:text="@string/profile_user_depair_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/profile_user_delete_button"
            android:text="@string/profile_user_delete_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/profile_group_join_button"
            android:text="@string/profile_group_join_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/profile_group_invite_button"
            android:text="@string/profile_group_invite_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/profile_group_leave_button"
            android:text="@string/profile_group_leave_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/profile_group_kick_button"
            android:text="@string/profile_group_kick_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/profile_group_disband_button"
            android:text="@string/profile_group_disband_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/profile_group_delete_button"
            android:text="@string/profile_group_delete_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</ScrollView>
