<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools" android:orientation="horizontal"
              android:gravity="center"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
        android:paddingLeft="6dp"
        android:paddingRight="6dp">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:id="@+id/tv_content_audio_caption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="2dp"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:text="@string/content_audio_caption"
                />

        <TextView
                android:id="@+id/tv_content_audio_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_content_audio_caption"
                android:layout_toLeftOf="@+id/ib_content_audio_play"
                android:text="filename.mp3"
                android:textColor="@android:color/secondary_text_light"
                tools:ignore="HardcodedText"/>

        <ImageButton
                android:id="@+id/ib_content_audio_play"
                android:src="@drawable/ic_dark_video"
                android:layout_width="@dimen/default_attachment_icon_dim"
                android:layout_height="@dimen/default_attachment_icon_dim"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:scaleType="fitXY"
                android:background="@android:color/transparent"
                />
    </RelativeLayout>

</LinearLayout>