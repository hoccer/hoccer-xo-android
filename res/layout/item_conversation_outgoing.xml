<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:custom="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
            android:id="@+id/message_time"
            android:text="13:23"
            android:textColor="@android:color/secondary_text_dark"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/message_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/message_time"
            android:text="@string/message_text"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="10dp"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@id/message_avatar"
            android:minHeight="50dp"
            android:gravity="center_vertical"
            style="@style/AppBaseTheme.Message.Outgoing"/>

    <com.hoccer.xo.android.view.AspectImageView
            android:id="@+id/message_avatar"
            android:layout_width="54dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/message_text"
            android:src="@drawable/avatar_default_contact"
            android:layout_alignParentRight="true"
            android:padding="2dp"
            android:scaleType="centerCrop"
            custom:aspectRatio="1.0"/>

    <com.hoccer.xo.android.content.ContentView
            android:id="@+id/message_content"
            android:gravity="center"

            custom:maxHeight="50dp"
            android:layout_width="match_parent"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:paddingLeft="2dp"
            android:paddingRight="0dp"
            android:layout_toLeftOf="@id/message_avatar"
            android:layout_below="@id/message_text"
            android:layout_height="wrap_content"
            android:background="@drawable/message_attachment"/>

</RelativeLayout>