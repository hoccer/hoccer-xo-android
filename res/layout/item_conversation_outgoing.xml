<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:custom="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

    <TextView
        android:id="@+id/message_text"
        android:text="@string/message_text"
        android:layout_margin="2dp"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@id/message_avatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <com.hoccer.talk.android.views.AspectImageView
        android:id="@+id/message_avatar"
        android:src="@drawable/avatar_default_contact"
        android:layout_alignParentRight="true"
        android:padding="2dp"
        android:layout_width="54dp"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        custom:aspectRatio="1.0"/>

    <com.hoccer.talk.android.content.ContentView
        android:id="@+id/message_content"
        android:gravity="center"
        custom:maxHeight="500dp"
        android:layout_width="match_parent"
        android:layout_margin="2dp"
        android:layout_toLeftOf="@id/message_avatar"
        android:layout_below="@id/message_text"
        android:layout_height="wrap_content">
    </com.hoccer.talk.android.content.ContentView>

    <TextView
        android:id="@+id/message_time"
        android:text="13:23"
        android:textColor="@android:color/secondary_text_dark"
        android:layout_below="@id/message_content"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@id/message_avatar"
        android:gravity="right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>