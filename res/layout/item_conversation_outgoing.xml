<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:custom="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

    <TextView
        android:id="@+id/message_text"
        android:text="@string/message_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <com.hoccer.talk.android.views.AspectImageView
        android:id="@+id/message_avatar"
        android:src="@drawable/avatar_default_contact"
        android:layout_alignParentRight="true"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        custom:aspectRatio="1.0"/>

    <com.hoccer.talk.android.content.ContentView
        android:id="@+id/message_content"
        android:gravity="center"
        custom:maxHeight="500dp"
        android:layout_width="match_parent"
        android:layout_toLeftOf="@id/message_avatar"
        android:layout_below="@id/message_text"
        android:layout_height="wrap_content"/>

</RelativeLayout>