<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:custom="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

    <com.hoccer.xo.android.view.AspectImageView
            android:id="@+id/smsinvite_icon"
            android:src="@drawable/avatar_default_contact"
            android:clickable="true"
            android:scaleType="centerCrop"
            custom:aspectRatio="1.0"
            android:layout_margin="2dp"
            android:layout_width="50dp"
            android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/smsinvite_name"
            android:text="@string/contact_name_new_client"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
            android:layout_margin="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/smsinvite_icon"/>

    <TextView
            android:id="@+id/smsinvite_type"
            android:text="Invite"
            android:textColor="@android:color/secondary_text_dark"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_margin="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

</RelativeLayout>
