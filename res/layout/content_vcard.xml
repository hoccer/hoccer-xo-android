<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="6dp"
        android:paddingRight="6dp">

    <TextView
            android:id="@+id/tv_vcard_name"
            android:text="Max Mustermann"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:paddingTop="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:ignore="HardcodedText"/>

    <TextView
            android:id="@+id/tv_vcard_description"
            android:text="@string/vcard_description"
            android:textColor="@android:color/secondary_text_light"
            android:layout_below="@id/tv_vcard_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_vcard_name"/>

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true">
        <ImageButton
                android:id="@+id/ib_vcard_show_button"
                android:scaleType="fitXY"
                android:layout_width="@dimen/default_attachment_icon_dim"
                android:layout_height="@dimen/default_attachment_icon_dim"
                android:background="@android:color/transparent"/>

        <ImageButton
                android:id="@+id/ib_vcard_import_button"
                android:scaleType="fitXY"
                android:layout_width="@dimen/default_attachment_icon_dim"
                android:layout_height="@dimen/default_attachment_icon_dim"
                android:background="@android:color/transparent"/>
    </LinearLayout>

</RelativeLayout>
