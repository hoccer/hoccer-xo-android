<resources>

    <!--
        Base application theme for API 14+. This theme completely replaces
        AppBaseTheme from BOTH res/values/styles.xml and
        res/values-v11/styles.xml on API 14+ devices.
    -->
    <style name="AppBaseTheme" parent="Theme.Sherlock.Light.DarkActionBar">
        <!-- API 14 theme customizations can go here. -->
        <item name="actionBarStyle">@style/AppBaseTheme.ActionBar.Background</item>
        <item name="android:actionBarStyle">@style/AppBaseTheme.ActionBar.Background</item>
        <item name="android:actionOverflowButtonStyle">@style/AppBaseTheme.ActionBar.OverflowButton</item>
        <item name="android:popupMenuStyle">@style/AppBaseTheme.PopupMenu</item>
        <item name="android:spinnerDropDownItemStyle">@style/AppBaseTheme.SpinnerDropDown</item>
        <item name="android:editTextBackground">@drawable/apptheme_edit_text_holo_light</item>
    </style>

    <style name="AppBaseTheme.ActionBar.Background" parent="Widget.Sherlock.ActionBar">
        <item name="android:background">@color/xo_app_main_color</item>
        <item name="background">@color/xo_app_main_color</item>
    </style>

    <style name="AppBaseTheme.ActionBar.OverflowButton" parent="Widget.Sherlock.ActionButton.Overflow">
        <item name="android:src">@android:drawable/ic_menu_more</item>
    </style>

    <style name="AppBaseTheme.PopupMenu" parent="android:style/Widget.Holo.Light.ListPopupWindow">
        <item name="android:background">@color/xo_app_main_color</item>
    </style>
    <style name="AppBaseTheme.SpinnerDropDown" parent="Widget.Sherlock.TextView.SpinnerItem">
        <item name="android:background">@color/xo_app_main_color</item>
    </style>


</resources>