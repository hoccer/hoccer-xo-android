<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hoccer.talk.android"
    android:versionCode="1"
    android:versionName="1.0" >

    <!-- We run on 2.3.3 (10) and up, we use features from up to 4.2 (17) -->
    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="17"/>

    <!-- We can use the camera for capture -->
    <uses-feature android:name="android.hardware.camera" android:required="false"/>

    <!-- Obviously, we need internet access -->
    <uses-permission android:name="android.permission.INTERNET"/>
    <!-- We monitor connection status while we want to communicate -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <!-- We also use GCM -->
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />
    <!-- GCM requires a Google account. -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <!-- GCM uses this -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <!-- Notification vibration -->
    <uses-permission android:name="android.permission.VIBRATE" />
    <!-- For attachments, also used for logging -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!-- We read and write contacts -->
    <uses-permission android:name="android.permission.READ_CONTACTS"/>
    <uses-permission android:name="android.permission.WRITE_CONTACTS"/>
    <!-- Our own GCM permission -->
    <uses-permission android:name="com.hoccer.talk.android.permission.C2D_MESSAGE"/>

    <!-- Declare permission for controlling our own push package -->
    <permission
            android:name="com.hoccer.talk.android.permission.C2D_MESSAGE"
            android:protectionLevel="signature"/>

    <!-- Declare our application -->
    <application
        android:name=".TalkApplication"
        android:allowBackup="false"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">

        <!-- Contact list - our main activity -->
        <activity
                android:name=".activity.ContactsActivity"
                android:label="@string/app_name">
            <!-- Show in launcher -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Messaging activity -->
        <activity
                android:name=".activity.MessagingActivity"
                android:label="@string/app_name"
                android:parentActivityName=".activity.ContactsActivity"
                android:windowSoftInputMode="stateHidden">
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value=".activity.ContactsActivity"/>
        </activity>

        <!-- Profile activity -->
        <activity
                android:name=".activity.ProfileActivity"
                android:label="@string/app_name"
                android:parentActivityName=".activity.ContactsActivity"
                android:windowSoftInputMode="stateHidden">
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value=".activity.ContactsActivity"/>
        </activity>

        <!-- Pairing activity -->
        <activity
                android:name=".activity.PairingActivity"
                android:label="@string/app_name"
                android:parentActivityName=".activity.ContactsActivity">
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value=".activity.ContactsActivity"/>
        </activity>

        <!-- Preference activity -->
        <activity
                android:name=".activity.PreferenceActivity"
                android:label="@string/app_name">
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value=".activity.ContactsActivity"/>
        </activity>

        <!-- About activity -->
        <activity
                android:name=".activity.AboutActivity"
                android:label="@string/app_name">
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value=".activity.ContactsActivity"/>
        </activity>

        <!-- Connection and delivery service -->
        <service android:name=".service.TalkClientService"/>

        <!-- GCM push service -->
        <service android:name=".push.TalkPushService"/>

        <!-- GCM broadcast receiver -->
        <receiver
            android:name=".push.TalkPushReceiver"
            android:permission="com.google.android.c2dm.permission.SEND" >
            <intent-filter>
                <!-- Receives the actual messages. -->
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />
                <!-- Receives the registration id. -->
                <action android:name="com.google.android.c2dm.intent.REGISTRATION" />
                <!-- Restrict to our own push package -->
                <category android:name="com.hoccer.talk.android" />
            </intent-filter>
        </receiver>

    </application>

</manifest>
