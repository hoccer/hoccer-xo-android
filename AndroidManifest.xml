<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hoccer.talk.android"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="14" />

    <!-- Obviously, we need internet access -->
    <uses-permission android:name="android.permission.INTERNET"/>

    <!-- We monitor connection status while we want to communicate -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <!-- We also use GCM -->
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />

    <!-- GCM requires a Google account. -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />

    <!-- GCM uses this -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <!-- Our own GCM permission -->
    <uses-permission android:name="com.hoccer.talk.android.permission.C2D_MESSAGE"/>

    <!-- For logging -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <!-- Declare permission for controlling our own push package -->
    <permission
            android:name="com.hoccer.talk.android.permission.C2D_MESSAGE"
            android:protectionLevel="signature"/>

    <application
        android:name=".TalkApplication"
        android:allowBackup="false"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- connection and delivery service -->
        <service android:name=".service.TalkClientService"/>

        <!-- GCM push service -->
        <service android:name=".push.TalkPushService"/>

        <!-- GCM broadcast receiver -->
        <receiver
            android:name=".push.TalkPushReceiver"
            android:permission="com.google.android.c2dm.permission.SEND" >
            <intent-filter>
                <!-- Receives the actual messages. -->
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />
                <!-- Receives the registration id. -->
                <action android:name="com.google.android.c2dm.intent.REGISTRATION" />
                <!-- Restrict to our own push package -->
                <category android:name="com.hoccer.talk.android" />
            </intent-filter>
        </receiver>

    </application>

</manifest>